---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <meta name="description" content="My amazing personal website!" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title}</title>
</head>

<body>
  <slot />
</body>

</html>

<style>
  :root {
    --background-mode-light: #fff;
    --background-mode-dark: #111;
    --text-mode-light: #111;
    --text-mode-dark: #fff;
    --link-mode-light: #0074d9;
    --link-mode-dark: #3DA5FF;
  }

  /**
   * Reset styles
   */
  html {
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    font-weight: 400;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    overflow-x: hidden;
    position: relative;
  }

  * {
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    display: inline-block;
    vertical-align: middle;
  }

  pre,
  code {
    font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
      monospace;
  }

  /**
   * Base styles
   */
  html {
    font-size: 62.5%;
    height: 100%;
  }

  body {
    background-color: var(--background-mode-light);
    color: var(--text-mode-light);
    font-size: 1.6rem;
    height: 100%;
    line-height: 1.75;
  }

  img {
    height: auto;
    max-width: 100%;
  }

  /**
   * Site styles
   */
  main {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100vh;
    text-align: center;
  }

  img {
    border-radius: 100%;
    width: 20rem;
  }

  h1 {
    font-size: 2.4rem;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    list-style: none;
  }

  a:link,
  a:visited {
    color: var(--link-mode-light);
    font-size: 1.8rem;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (min-width: 576px) {

    a:link,
    a:visited {
      font-size: 1.6rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: var(--background-mode-dark);
      color: var(--text-mode-dark);
    }

    a:link,
    a:visited {
      color: var(--link-mode-dark);
    }
  }

  /* @media (prefers-color-scheme: light) {
    body {
      background-color: var(--background-mode-light);
      color: var(--text-mode-light);
    }

    a:link,
    a:visited {
      color: var(--link-mode-light);
    }
  } */
</style>