  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.0.1",
    "css-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
